{

    "name": "web",
    "version": "1.0.0.0",
    "indexHtmlPath": "index.html",
    "classpath": [
        "app",
        "${toolkit.name}/src",
        "tests"
    ],
    "overrides": [
        "overrides",
        "${toolkit.name}/overrides"
    ],

    "framework": "ext",
    "requires": [
        "font-awesome",
        "package-loader"
    ],
    "sass": {
        "namespace": "web",
        "etc": [
            "sass/etc/all.scss",
            "${toolkit.name}/sass/etc/all.scss"
        ],
        "var": [
            "sass/var/all.scss",
            "sass/var",
            "${toolkit.name}/sass/var"
        ],
        "src": [
            "sass/src",
            "${toolkit.name}/sass/src"
        ]
    },
    "language": {
        "js": {
            "input": {
                "version": "ES6"
            },
            "output": {
                "version": "ES5"
            }
        }
    },
    "js": [
        {
            "path": "app.js",
            "bundle": true
        },
        {
            "path": "libs/signaturepad/signature_pad.js",
            "includeInBundle": true
        },
        {
            "path": "libs/ace-min-noconflict/ace.js",
            "includeInBundle": true
        },
        {
            "path": "libs/ace-min-noconflict/mode-sql.js",
            "includeInBundle": true
        },
        {
            "path": "libs/ace-min-noconflict/theme-github.js",
            "includeInBundle": true
        },
        {
            "path": "libs/ace-min-noconflict/snippets/text.js",
            "includeInBundle": true
        },
        {
            "path": "libs/ace-min-noconflict/snippets/sql.js",
            "includeInBundle": true
        },
        {
            "path": "libs/ace-min-noconflict/ext-language_tools.js",
            "includeInBundle": true
        },
        {
            "path": "libs/xml2json.js",
            "includeInBundle": true
        }
    ],
    "classic": {
        "requires": [
            "package-loader",
            "sencha-charts",
            "criterion-admin"
        ],
        "uses": [
            "criterion-admin-hr",
            "criterion-admin-payroll",
            "criterion-admin-recruiting",
            "criterion-admin-scheduling"
        ]
    },

    "css": [
        {
            "path": "${build.out.css.path}",
            "bundle": true,
            "exclude": [
                "fashion"
            ]
        }
    ],
    "loader": {
        "cache": false,
        "cacheParam": "_dc"
    },

    "production": {
        "output": {
            "appCache": {
                "enable": false,
                "path": "../cache.appcache"
            }
        },
        "loader": {
            "cache": "${build.timestamp}"
        },
        "cache": {
            "enable": false
        }
    },
    "testing": {
    },

    "development": {
        "tags": [
        ]
    },

    "bootstrap": {
        "base": "${app.dir}",
        "manifest": "${build.id}.json",
        "microloader": "bootstrap.js",
        "css": "bootstrap.css"
    },

    "output": {
        "base": "${workspace.build.dir}/${build.environment}/${app.name}",
        "page": "index.html",
        "manifest": "${build.id}.json",
        "appCache": {
            "enable": false
        },
        "resources": {
            "path": "${build.id}/resources",
            "shared": "resources"
        }
    },
    "cache": {
        "enable": false,
        "deltas": false
    },

    "appCache": {
        "cache": [],
        "network": [
            "*"
        ],
        "fallback": []
    },
    "resource": {
        "paths": [
            "resources",
            "${toolkit.name}/resources"
        ]
    },

    "ignore": [
        "(^|/)CVS(/?$|/.*?$)"
    ],

    "archivePath": "archive",

    "builds": {
        "default": {
            "toolkit": "classic",
            "theme": "criterion-theme-classic-default"
        }
    },

    "id": "e9c73bb1-8c17-474f-9719-827a807acf90"
}
